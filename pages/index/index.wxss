/* pages/index/index.wxss */
.header{
  position: relative;
  padding: 10rpx 40rpx;
}

.user-container{
  display: flex;
  width: 100%;
  height: 144rpx;
  padding-right: 200rpx;
  box-sizing: border-box;
  white-space: nowrap;
}

.user-item, .add-btn{
  display: inline-block;
  width: 100rpx;
  height: 144rpx;
  margin: 0 15rpx;
  text-align: center;
}

.user-avatar{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.user-name, .add-text{
  width: 100rpx;
  height: 32rpx;
  color: #414852;
  font-family: Montserrat;
  font-size: 26rpx;
  font-weight: 300;
  line-height: 34rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.add-btn{
  display: inline-block;
  vertical-align: top;
  width: 96rpx;
  height: 96rpx;
}

.add-btn image{
  width: 96rpx;
  height: 96rpx;
}

.setting-btn{
  position: absolute;
}

.setting-btn{
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  top: 25rpx;
  right: 50rpx;
}

.setting-btn image{
  width: 70rpx;
  height: 70rpx;
}

.setting-text{
  width: 70rpx;
  height: 32rpx;
  margin-top: 10rpx;
  color: #414852;
  font-family: Montserrat;
  font-size: 26rpx;
  text-align: center;
  font-weight: 300;
}

.pet-container{
  position: relative;
  margin: 20rpx 10rpx;
  padding-top: 340rpx;
}

.pet-btn-group{
  position: absolute;
  top: 0;
  right: 0;
  width: 310rpx;
}

.pet-btn{
  border-radius: 48rpx;
  width: 310rpx;
  height: 90rpx;
  margin-bottom: 20rpx;
  background: #fa4169;
  color: #fff7f7;
  font-family: PingFangSC;
  font-size: 36rpx;
  font-weight: 400;
  line-height: 90rpx;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0px;
  box-shadow: 0px 4px 8px rgba(65,72,82,0.2);
}

.pet-btn.disabled{
  background: #c0bbbb;
}

.pet-image{
  position: relative;
  width: 100%;
  height: 558rpx;
  text-align: center;
}

.pet-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.pet-avatar{
  width: 360rpx;
  height: 402rpx;
  margin-top: 60rpx; 
}

.step-container{
  position: absolute;
  width: 194rpx;
  left: 20rpx;
  top: 10rpx;
  text-align: center;
}

.step-text{
  margin: 0 auto;
  width: 160rpx;
  height: 56rpx;
  color: #414852;
  font-family: PingFangSC;
  font-size: 40rpx;
  font-weight: 400;
  line-height: 50rpx;
  text-align: center;
}

.step-count{
  position: relative;
  width: 194rpx;
  height: 194rpx;
}

.step-count image{
  position: absolute;
  z-index: -1;
  width: 194rpx;
  height: 194rpx;
  top: 0;
  left: 0;
}

.step-count view{
  line-height: 180rpx;
  color: #fff7f7;
  font-family: PingFangSC;
  font-size: 48rpx;
  font-weight: 400;
  text-align: center;
}