/* pages/index/index.wxss */

.header {
  position: relative;
  padding: 10rpx 40rpx;
}

.user-container {
  display: flex;
  width: 100%;
  height: 144rpx;
  padding-right: 200rpx;
  box-sizing: border-box;
  white-space: nowrap;
}

.user-item, .add-btn {
  display: inline-block;
  width: 100rpx;
  height: 144rpx;
  margin: 0 15rpx;
  text-align: center;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.user-name, .add-text {
  width: 100rpx;
  height: 32rpx;
  color: #414852;
  font-family: Montserrat;
  font-size: 26rpx;
  font-weight: 300;
  line-height: 34rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.add-btn {
  display: inline-block;
  vertical-align: top;
  width: 96rpx;
  height: 96rpx;
}

.add-btn image {
  width: 96rpx;
  height: 96rpx;
}

.setting-btn {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  top: 25rpx;
  right: 50rpx;
}

.setting-btn image {
  width: 70rpx;
  height: 70rpx;
}

.setting-text {
  width: 70rpx;
  height: 32rpx;
  margin-top: 10rpx;
  color: #414852;
  font-family: Montserrat;
  font-size: 26rpx;
  text-align: center;
  font-weight: 300;
}

.chat-btn {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  top: 25rpx;
  right: 150rpx;
}

.chat-btn image {
  width: 70rpx;
  height: 70rpx;
}

.chat-text {
  width: 70rpx;
  height: 32rpx;
  margin-top: 10rpx;
  color: #414852;
  font-family: Montserrat;
  font-size: 26rpx;
  text-align: center;
  font-weight: 300;
}

.pet-container {
  position: relative;
  margin: 20rpx 10rpx;
  padding-top: 340rpx;
}

.pet-btn-group {
  position: absolute;
  top: 0;
  right: 20rpx;
  width: 180rpx;
}

.pet-btn {
  border-radius: 48rpx;
  width: 180rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  background: #fa4169;
  color: #fff7f7;
  font-family: PingFangSC;
  font-size: 36rpx;
  font-weight: 400;
  line-height: 80rpx;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0px;
  box-shadow: 0px 4px 8px rgba(65, 72, 82, 0.2);
}

.pet-btn.disabled {
  background: #c0bbbb;
}

.pet-image {
  position: relative;
  width: 100%;
  height: 558rpx;
  text-align: center;
  margin-top: 100rpx;
}

.pet-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.pet-avatar {
  width: 360rpx;
  height: 402rpx;
  margin-top: 60rpx;
}

.pet-talk {
  position: absolute;
  width: 500rpx;
  height: 352rpx;
  left: 20rpx;
  top: -130rpx;
  transform-origin: left bottom;
}

@keyframes grow {
  from {
    transform: scale(0);
  }

  70% {
    transform: scale(1.1);
    animation-timing-function: cubic-bezier(0.1, 0.25, 0.25);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
    animation-timing-function: cubic-bezier(0.1, 0.25, 0.25);
  }
}

.grow {
  animation: grow 1s;
}

.fadeIn {
  animation: fadeIn 1.2s;
}

.pet-word {
  position: absolute;
  left: 60rpx;
  top: -85rpx;
  width: 420rpx;
  height: 100rpx;
  font-size: 30rpx;
}

.step-container {
  position: absolute;
  width: 194rpx;
  left: 20rpx;
  top: 10rpx;
  text-align: center;
}

.step-text {
  margin: 0 auto;
  width: 160rpx;
  height: 56rpx;
  color: #414852;
  font-family: PingFangSC;
  font-size: 40rpx;
  font-weight: 400;
  line-height: 50rpx;
  text-align: center;
}

.step-count {
  position: relative;
  width: 156rpx;
  height: 156rpx;
}

.step-count image {
  position: absolute;
  z-index: -1;
  width: 156rpx;
  height: 156rpx;
  top: 0;
  left: 0;
}

.step-count view {
  line-height: 156rpx;
  color: #fff7f7;
  font-family: PingFangSC;
  font-size: 40rpx;
  font-weight: 400;
  text-align: center;
}

.talk-dialog {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
  width: 684rpx;
  height: 206rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #d5d5d5;
  opacity: 0.8;
  border-radius: 46rpx;
}

.talk-input {
  width: 100%;
  height: 100%;
}

.grow-center {
  animation: growCenter 1s;
}

@keyframes growCenter {
  from {
    transform: scale(0);
  }

  70% {
    transform: scale(1.2);
    animation-timing-function: cubic-bezier(0.1, 0.25, 0.25);
  }
}

.send-btn {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  bottom: 10rpx;
  right: 10rpx;
}

.food-container {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 202rpx;
  height: 182rpx;
}

.food-container image {
  width: 202rpx;
  height: 182rpx;
}

.tip-container {
  position: absolute;
  right: 90rpx;
  bottom: 200rpx;
  width: 130rpx;
  height: 98rpx;
}

.tip-img {
  width: 130rpx;
  height: 98rpx;
}

.tip-text {
  position: absolute;
  left: 30rpx;
  width: 72rpx;
  top: 10rpx;
  font-size: 36rpx;
}

.dirty-container {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 244rpx;
  height: 154rpx;
}

.dirty-big {
  position: absolute;
  width: 144rpx;
  height: 104rpx;
  top: 0;
  right: 0;
}

.dirty-small {
  position: absolute;
  width: 102rpx;
  height: 82rpx;
  bottom: 0;
  left: 0;
}


@keyframes swing {
  10% {
    transform: rotate(15deg);
  }
  20% {
    transform: rotate(-10deg);
  }
  30% {
    transform: rotate(5deg);
  }
  40% {
    transform: rotate(-5deg);
  }
  50%,100% {
    transform: rotate(0deg);
  }
}
.swing{
  transform-origin: bottom center;
  animation: swing 4.5s .15s linear;
}

.enter{
  animation: enter 3s;
}

@keyframes enter{
  from{
    transform: scale(0);
    opacity: 0;
  }
  to{
    transform: scale(1);
     opacity: 1;
  }
}

.foot-container{
  position: absolute;
  left: 60rpx;
  top: 170rpx;
}

.foot-container image{
  width: 62rpx;
  height: 62rpx;
}

.foot-container view{
  color: #c6c2c2;
  font-family: PingFangSC;
  font-size: 36rpx;
  font-weight: 400;
}