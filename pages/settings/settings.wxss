/* pages/settings/settings.wxss */
.setting-container{
  height: 100vh;
  padding-top: 124rpx;
  box-sizing: border-box;
  background: #fccacb;
}

.setting-btn-group{
  padding: 0 175rpx;
}

.setting-btn{
  margin-top: 120rpx;
  border-radius: 24px;
  width: 400rpx;
  height: 100rpx;
  background: #fa4169;
  color: #fff;
  font-family: PingFangSC;
  font-size: 36rpx;
  font-weight: 400;
  line-height: 100rpx;
  text-align: center;
  box-shadow: 0px 2px 4px rgba(0,0,0,0.5);
}

.setting-btn.disabled{
  background: #aea9a9;
}

.header-back-btn{
  width: 36rpx;
  height: 36rpx;
}

.header-back-btn image{
  width: 100%;
  height: 100%;
}