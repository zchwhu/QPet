.cloth-wrapper{
  display: flex;
  flex-direction: row;
}

.cloth-group{
  display: inline-block;
  width: 100vw;
  height: 100vh;
  padding-top: 150rpx;
  box-sizing: border-box;
}

.cloth-item{
  display: inline-block;
  width: 50%;
  height: 378rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.cloth-item image{
  width:  100%;
  height: 100%;
}

.back-btn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 144rpx;
  font-size: 40rpx;
  line-height: 144rpx;
  text-align: center;
  background: #fa4169;
  color: #fff;
}