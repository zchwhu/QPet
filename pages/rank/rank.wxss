/* pages/rank/rank.wxss */
.rank-header{
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 124rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

.rank-back-btn{
  width: 36rpx;
  height: 36rpx;
}

.rank-back-btn image{
  width: 100%;
  height: 100%;
}

.rank-title{
  color: #414852;
  font-family: Montserrat;
  font-size:36rpx;
  font-weight: 400;
}

.rank-share-btn{
  color: #fa4169;
  font-family: PingFangSC;
  font-size: 34rpx;
  font-weight: 400;
  text-decoration: underline;
}

.rank-body{
  min-height: 100vh;
  padding-top: 124rpx;
  box-sizing: border-box;
  background: #f7f7fb;
}

.rank-item{
  display: flex;
  padding: 30rpx 30rpx;
  align-items: center;
  border-bottom: 2rpx solid #efefef;
}

.rank-num{
  width: 30rpx;
  color: #f52656;
  font-family: Montserrat;
  font-size: 48rpx;
  font-style: normal;
  font-stretch: normal;
}

.rank-avatar{
  display: flex;
  margin-left: 40rpx;
  flex: 1;
}

.rank-pet-avatar{
  width: 96rpx;
  height: 96rpx;
  margin-right: 20rpx;
}

.rank-pet-avatar image{
  width: 96rpx;
  height: 96rpx;
  border: 4rpx solid #fa4169;
  border-radius: 50%; 
  box-sizing: border-box;
}

.rank-user{
  display: flex;
  align-items: center;
}

.rank-user image{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%; 
}

.rank-user-list{
  display: flex;
  align-items: center;
}

.rank-user-plus{
  margin: 0 10rpx;
  font-size: 48rpx;
  color: #fa4169;
}

.rank-praise{
  position: relative;
  width: 90rpx;
  height: 90rpx;
}

.rank-praise image{
  width: 90rpx;
  height: 90rpx;
}

.rank-praise-num{
  position: absolute;
  top: 0;
  left: 0;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
}