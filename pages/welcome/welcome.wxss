/* pages/welcome/welcome.wxss */
.welcome-container{
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.welcome-bg{
  width: 100%;
  height: 100vh;
}

.dialog-wrapper{
  width: 100%;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,0.6);
  font-family: Montserrat;
  font-size: 14px;
  font-style: normal;
  font-stretch: normal;
  font-weight: 300;
  line-height: 24px;
  text-align: center;
  text-transform: none;
  letter-spacing: 0px;
}

.dialog-container{
  width: 622rpx;
  min-height: 268rpx;
  background: #fff;
  border-radius: 8rpx;
}

.dialog-header{
  width: 100%;
  height: 132rpx;
  line-height: 132rpx;
  background: #fa4169;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  color: #ffffff;
  font-family: PingFangSC;
  font-size: 40rpx;
  font-style: normal;
  font-stretch: normal;
  font-weight: 400;
  text-align: center;
}

.dialog-footer{
  display: flex;
}

.dialog-cancel-btn, .dialog-confirm-btn{
  width: 50%;
  line-height: 136rpx;
  font-size: 32rpx;
  position: static;
  background: #fff;
}

.dialog-confirm-btn{
  color: #f52656;
  border-left: 1rpx solid #e5e5e5;
}
